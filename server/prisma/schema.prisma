generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comerciante {
  id            String    @id @default(uuid())
  nome          String
  email         String    @unique
  senha         String
  nomeComercial String
  cpf           String    @unique
  fotoPerfil    String?
  clientes      Cliente[]

  @@map("comerciantes")
}

model Cliente {
  id            String      @id @default(uuid())
  nome          String
  cpf           String
  telefone      String
  rua           String
  numero        Int
  bairro        String
  cidade        String
  estado        String
  comercianteId String
  comerciante   Comerciante @relation(fields: [comercianteId], references: [id], onDelete: Cascade)
  compras       Compra[]

  @@unique([cpf, comercianteId])
  @@map("clientes")
}

model Compra {
  id         String       @id @default(uuid())
  data       DateTime     @default(now())
  valorTotal Float
  clienteId  String
  cliente    Cliente      @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  itens      ItemCompra[]

  @@map("compras")
}

model ItemCompra {
  id            String @id @default(uuid())
  nome          String
  quantidade    Int
  precoUnitario Float
  valorTotal    Float
  compraId      String
  compra        Compra @relation(fields: [compraId], references: [id], onDelete: Cascade)

  @@map("itensCompras")
}
